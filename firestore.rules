rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ── Helper functions ──────────────────────────────────────────
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin'];
    }

    function isSuperAdmin() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
    }

    function isApproved() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.status == 'approved';
    }

    // ── Users collection ──────────────────────────────────────────
    // get (single doc): only the owner, approved members, or admins.
    // list (collection query): any authenticated user — required so that
    //       the duplicate-email check during registration can query by email
    //       before the new account is approved.
    // Update (owner): allowed but privileged fields are locked — prevents
    //       a user from escalating their own role or faking approval.
    match /users/{userId} {
      allow get: if isOwner(userId) || isApproved() || isAdmin();
      allow list: if isAuthenticated();
      allow create: if isOwner(userId);
      allow update: if (isOwner(userId) &&
        !request.resource.data.diff(resource.data).affectedKeys()
          .hasAny(['role', 'status', 'approvedAt', 'approvedBy']))
        || isAdmin();
      // Super admin can delete any user; regular admin can only delete
      // pending applicants (i.e. reject them during the approval workflow).
      allow delete: if isSuperAdmin() ||
        (isAdmin() && resource.data.status == 'pending');
    }

    // ── Events collection ─────────────────────────────────────────
    match /events/{eventId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // ── Event participants ────────────────────────────────────────
    // get  — participant themselves or any admin (single-doc read).
    // list — admins can query without restriction; regular users may only
    //        run queries constrained by their own userId (Firestore enforces
    //        this when the query has where('userId','==',uid)).
    // Prevents approved members from reading each other's bKash TxIDs
    // and sender phone numbers.
    match /eventParticipants/{participantId} {
      allow get: if (isAuthenticated() && resource.data.userId == request.auth.uid)
        || isAdmin();
      allow list: if isAdmin()
        || (isAuthenticated() && resource.data.userId == request.auth.uid);
      allow create: if isApproved();
      allow update, delete: if isAdmin();
    }

    // ── Archived events ───────────────────────────────────────────
    match /archivedEvents/{archiveId} {
      allow read: if isAdmin();
      allow create: if isAdmin();
      allow delete: if isSuperAdmin();
    }

    // ── Activity logs ─────────────────────────────────────────────
    // Contains PII (admin emails, target user details). Admin-only.
    // No updates or deletes — logs are append-only.
    match /activityLogs/{logId} {
      allow read: if isAdmin();
      allow create: if isAdmin();
      allow update, delete: if false;
    }
  }
}
